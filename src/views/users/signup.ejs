<% include ../partials/_header %>


<div class="row">
    <div class="col-md-4 mx-auto mt-5 " >
      <div class="card " style="margin-top: 50px">
        <div class="card-header">
          Regístrese ahora
        </div>
        <div class="card-body">
          <form action="/users/signup" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="name" placeholder="Name" value="">
            </div>
            <div class="form-group">
              <input type="email" class="form-control" name="email" placeholder="Email" value="">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password" value="">
            </div>
           
            <div class="form-group">
              <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="direccion" placeholder="Dirección" value="">
            </div>          
            <div class="form-group">
              <input type="text" class="form-control" name="telefono" placeholder="Teléfono" value="">
            </div>
            <button class="btn btn-primary btn-block">
              Signup 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>



  <% include ../partials/_footer %>
