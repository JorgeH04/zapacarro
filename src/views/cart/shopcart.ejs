<% include ../partials/_header %>


<% if(products) { %>
        <div class="col-sm-8">
      <h2>Detalle: </h2>
      <% for(var i = 0; i < products.length; i++) { %>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Talle</th>
            <th>Color</th>
            <th>Precio</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr >
            <td class="text-center"><%= products[i].item.product %> </td>
            <td class="text-center"> <img style="width: 5rem;" src="<%= products[i].item.imagePath %>"></td>
            <td class="text-center"><%= products[i].qty %></td>
            <td class="text-center"><%= products[i].item.talle %></td>
            <td class="text-center"><%= products[i].item.color %></td>
            <td class="text-center"> $ <%= products[i].price %></td>
            <td class="text-center"> 
                    <a href="/reduce/<%= products[i].item._id %>" class="btn btn-success">Reducir</a>
                    <a href="/remove/<%= products[i].item._id %>" class="btn btn-danger">Eliminar</a>
            </td>
          </tr>

        </tbody>
      </table>
      <% } %>            


    </div>

            </div>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: <%= totalPrice %></strong>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
