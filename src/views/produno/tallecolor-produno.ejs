<% include ../partials/_header %>



<div class="col-md-4 mx-auto">
        <div class="card">
          <div class="card-header">
            <h3>Digite color y talle</h3>
          </div>
          <div class="card-body">
            <form action="/produno/tallecolor/<%= produno._id %>" method="POST">
              <input type="hidden" name="_method" value="PUT">
              <div class="form-group">
                <input type="text" name="talle" class="form-control" value="<%= produno.tallestock %>"/>
              </div>
              <div class="form-group">
                <input type="text" name="color" class="form-control" value="<%= produno.colorstock %>"/>
              </div>
              <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>


      <% include ../partials/_footer %>
      