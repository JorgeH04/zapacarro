<% include ../partials/_header %>



  <div class="row mt-5">
    <% produno.forEach(function (produn) { %>
      <div class="col-md-3 wow slideInDown">
       <div class="card"> 
          <a href="/produnoredirect/<%= produn.id %>">
         <img class="card-img-top img-fluid" alt="img1" src="<%= produn.imagePath %>">
          </a>
          <div class="card-body">
        <div class="card-heading"><%= produn.product %></div>
        <h4> $<%= produn.price %>  </h4>
        <a class="btn btn-pink text-light"><i class="fa fa-cart-plus" aria-hidden="true"></i> Add To Cart</a> </div>
        </div>
  </div>
  <% }) %>


</div>
     
</div>
</div>


<div class="row mt-5">
  <!-- pagination -->
  <% if(pages > 0) { %> <!-- show pagination if there is pages -->
    <nav class="mx-auto" style="margin-bottom: 50px">
      <ul class="pagination">
        <!-- FIRST ITEM -->
        <% if(current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">First</a>
          </li>
        <% } else { %>
          <li class="page-item">
            <a class="page-link" href="/produnoindex/1">First</a>
          </li>
        <% } %>
        <!-- ITEMS  -->
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if(i !== 1) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">...</a>
          </li>
        <% } %>
        <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if(i == current) { %>
            <li class="page-item active">
              <a class="page-link" href="<%= i %>">
                <%= i %>
              </a>
            </li>
          <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/produnoindex/<%= i %>">
                <%= i %>
              </a>
            </li>
          <% } %>
          <% if (i == Number(current) + 4 && i < pages) { %>
             <li class="page-item disabled">
               <a class="page-link" href="#">...</a>
             </li>
          <% } %>
        <% } %>
        <!-- LAST ITEM -->
        <% if(current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link" href="#">
              Last
            </a>
          </li>
        <% } else { %>
          <li class="page-item">
            <a class="page-link" href="/produnoindex/<%= pages %>">
              Last
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>




  <% include ../partials/_footer %>