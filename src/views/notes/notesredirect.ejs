<% include ../partials/_header %>



<div class="container p-4">
        <div class="row">

           <div class= "col-md-6 mt-5">
                <div class="card text-center mx-auto" >
                     <div class="card-body">
                          <img src="<%= note.imagePath %>" class="img-fluid">
                     </div>        
                 </div>
            </div>
            <div class= "col-md-6 mt-5">
     
                <div class="card text-center mx-auto" >
                     <div class="card-body">
                         <h1>Talles y colores en stock:</h1>
                           <h5><%= note.talle %></h2>
                           <h5><%= note.color %></h2>
                           <br>
                          <a href="/notes/tallecolor/<%= note.id %>"class="btn btn-danger pull-right" role="button">Elija su talle y color</a>
     
                     </div>     
                 </div>
                <div class="card text-center mx-auto" >
                     <div class="card-body">
                         <h2><%= note.product %></h2>
                         <h2>$<%= note.price %></h2>
                     </div>  

                     <div class="card-body">
                          <a href="/addtocardofertauno/" class="btn btn-success pull-right" role="button">Agregar al carro</a>
                     </div>       
                 </div>
            </div>
     
         </div>
     </div>
     






<% include ../partials/_footer %>

