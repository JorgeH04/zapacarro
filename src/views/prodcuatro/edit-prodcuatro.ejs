<% include ../partials/_header %>



<div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h3>Edite su producto</h3>
      </div>
      <div class="card-body">
        <form action="/prodcuatro/edit/<%= prodcuatro._id %>" method="POST">
          <input type="hidden" name="_method" value="PUT">


          <div class="form-group">
              <input type="text" name="name" class="form-control" placeholder="name" value="<%= prodcuatro.name %>"  autofocus/>
            </div>
           <div class="form-group">
              <input type="text" name="title" class="form-control" placeholder="title" value="<%= prodcuatro.title %>" autofocus/>
            </div>
            <div class="form-group">
                <input type="text" name="image" class="form-control" placeholder="imagen 1" value="<%= prodcuatro.image %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="imagedos" class="form-control" placeholder="imagen 2" value="<%= prodcuatro.imagedos %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="imagetres" class="form-control" placeholder="imagen 3" value="<%= prodcuatro.imagetres %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="description" class="form-control" placeholder="descripcion" value="<%= prodcuatro.description %>" autofocus/>
              </div>
              <div class="form-group">
                <input type="text" name="price" class="form-control" placeholder="precio" value="<%= prodcuatro.price %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="oldprice" class="form-control" placeholder="precio anterior" value="<%= prodcuatro.oldprice %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="color" class="form-control" placeholder="color" value="<%= prodcuatro.color %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="colorstock" class="form-control" placeholder="color stock" value="<%= prodcuatro.colorstock %>" autofocus/>
              </div>
              <div class="form-group">
                  <input type="text" name="filtroprice" class="form-control" placeholder="filtro de precio" value="<%= prodcuatro.filtroprice %>" autofocus/>
              </div>



          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>






<% include ../partials/_footer %>