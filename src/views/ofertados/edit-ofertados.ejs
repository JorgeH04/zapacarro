<% include partials/_header %>


<div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h3>Edite su producto</h3>
      </div>
      <div class="card-body">
        <form action="/ofertados/edit/<%= ofertados._id %>" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <input type="text" name="imagePath" class="form-control" value="<%= ofertados.imagePath %>" placeholder="Edite el nombre del producto"/>
          </div>
          <div class="form-group">
            <input type="text" name="product" class="form-control" value="<%= ofertados.product %>" placeholder="Edite el nombre del producto"/>
          </div>
          <div class="form-group">
            <input type="text" name="talle" class="form-control" value="<%= ofertados.talle %>" placeholder="Edite los talles en stock"/>
          </div>
          <div class="form-group">
            <input type="text" name="color" class="form-control" value="<%= ofertados.color %>" placeholder="Edite los colores en stock"/>
          </div>
          <div class="form-group">
            <input type="text" name="tallestock" class="form-control" value="<%= ofertados.tallestock %>" placeholder="Edite los talles en stock"/>
          </div>
          <div class="form-group">
            <input type="text" name="colorstock" class="form-control" value="<%= ofertados.colorstock %>" placeholder="Edite los colores en stock"/>
          </div>
          <div class="form-group">
            <input type="number" name="price" class="form-control" value="<%= ofertados.price %>" placeholder="Edite el precio"/>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>



<% include partials/_footer %>
