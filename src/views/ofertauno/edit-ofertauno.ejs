<% include ../partials/_header %>



<div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        <h3>Edite su producto</h3>
      </div>
      <div class="card-body">
        <form action="/ofertauno/edit/<%= ofertauno._id %>" method="POST">
          <input type="hidden" name="_method" value="PUT">




          <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="name" value="<%= ofertauno.name %>"  autofocus/>
          </div>
         <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="title" value="<%= ofertauno.title %>" autofocus/>
          </div>
          <div class="form-group">
              <input type="text" name="image" class="form-control" placeholder="imagen 1" value="<%= ofertauno.image %>" autofocus/>
            </div>
            <div class="form-group">
              <input type="text" name="imagedos" class="form-control" placeholder="imagen 2" value="<%= ofertauno.imagedos %>" autofocus/>
            </div>
            <div class="form-group">
              <input type="text" name="imagetres" class="form-control" placeholder="imagen 3" value="<%= ofertauno.imagetres %>" autofocus/>
            </div>
                   <div class="form-group">
              <input type="text" name="description" class="form-control" placeholder="descripcion" value="<%= ofertauno.description %>" autofocus/>
            </div>
                   <div class="form-group">
              <input type="text" name="price" class="form-control" placeholder="precio" value="<%= ofertauno.price %>" autofocus/>
            </div>
     



          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>






<% include ../partials/_footer %>
